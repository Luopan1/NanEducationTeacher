<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x100"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="课程"
                    android:textColor="@color/black" />

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/courseSpinner"
                    android:layout_width="@dimen/x280"
                    android:layout_height="@dimen/x90"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="right"
                    android:text="年级"
                    android:textColor="@color/black" />

                <org.angmarch.views.NiceSpinner
                    android:id="@+id/gradeSpinner"
                    android:layout_width="@dimen/x280"
                    android:layout_height="@dimen/x90"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x10" />

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x150"
                    android:layout_height="match_parent"
                    android:layout_gravity="clip_vertical"
                    android:gravity="right|center_vertical"
                    android:text="房间号"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/chatRoomNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x150"
                    android:layout_height="match_parent"
                    android:layout_gravity="clip_vertical"
                    android:gravity="right|center_vertical"
                    android:text="价格"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/priece"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x150"
                    android:layout_height="match_parent"
                    android:layout_gravity="clip_vertical"
                    android:gravity="right|center_vertical"
                    android:text="课程标题"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/courseTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x150"
                    android:layout_height="match_parent"
                    android:layout_gravity="clip_vertical"
                    android:gravity="right|center_vertical"
                    android:text="开始时间"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/startTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/x30"
                    android:drawableRight="@android:drawable/arrow_down_float"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/x30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x150"
                android:background="@color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x150"
                    android:layout_height="match_parent"
                    android:layout_gravity="clip_vertical"
                    android:gravity="right|center_vertical"
                    android:text="结束时间"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/x30"
                    android:drawableRight="@android:drawable/arrow_down_float"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/x30" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginLeft="@dimen/x150"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/x150"
                    android:layout_height="match_parent"
                    android:layout_gravity="clip_vertical"
                    android:gravity="right|center_vertical"
                    android:text="适合人群"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/startAge"
                    android:layout_width="@dimen/x155"
                    android:layout_height="@dimen/x60"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@drawable/no_corners_gray_frame"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x60"
                    android:text="到"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/endAge"
                    android:layout_width="@dimen/x155"
                    android:layout_height="@dimen/x60"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x60"
                    android:background="@drawable/no_corners_gray_frame"
                    android:inputType="numberDecimal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/x30"
                    android:text="岁"
                    android:textColor="@color/black" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="@dimen/x15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/x30"
                    android:textColor="@color/balck"
                    android:text="是否开启录播"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <CheckBox
                    android:checked="true"
                    android:id="@+id/isOpenVideoCache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/x15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/x30"
                    android:textColor="@color/balck"
                    android:text="房间人数限"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                    <EditText
                        android:id="@+id/countNumber"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/all_corners_white_color"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="人"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="@dimen/x150"
                    android:layout_height="wrap_content"
                    android:layout_gravity="clip_vertical"
                    android:gravity="right"
                    android:text="封面图"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/courseImage"
                    android:layout_width="@dimen/x145"
                    android:layout_height="@dimen/x145"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_toRightOf="@+id/text"
                    android:scaleType="fitXY"
                    android:src="@mipmap/jia" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x30"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="@dimen/x150"
                    android:layout_height="wrap_content"
                    android:layout_gravity="clip_vertical"
                    android:gravity="right"
                    android:text="详情图"
                    android:textColor="@color/black" />

                <ImageView
                    android:id="@+id/courseImageInfo"
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/x300"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_toRightOf="@+id/text1"
                    android:scaleType="fitXY"
                    android:src="@mipmap/jia" />
            </RelativeLayout>

            <TextView
                android:layout_width="@dimen/x150"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:gravity="right"
                android:text="课程介绍"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/couseIntrocuce"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x215"
                android:layout_margin="@dimen/x20"
                android:background="@drawable/no_corners_gray_frame"
                android:gravity="top"
                android:padding="@dimen/x15"
                android:textSize="15sp" />


            <Button
                android:id="@+id/comfirmCreate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:layout_marginBottom="@dimen/x50"
                android:layout_marginLeft="@dimen/y150"
                android:layout_marginRight="@dimen/y150"
                android:layout_marginTop="@dimen/y150"
                android:background="@color/base_color"
                android:text="确认创建"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>